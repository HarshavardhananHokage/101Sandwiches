<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ag_indigo">

    <TextView
        android:id="@+id/fag2_tv_mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/ag_groups_mainText"
        android:textColor="@color/white"
        android:textSize="75sp"/>

    <ImageView
        android:id="@+id/fag2_iv_mainImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/categories"
        android:layout_above="@id/fag2_tv_mainText"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/ag_groups_img_des"/>

    <TextView
        android:id="@+id/fag2_tv_subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fag2_tv_mainText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:gravity="center"
        android:text="@string/ag_groups_subText"
        android:textColor="@color/white"
        android:textSize="35sp"/>

    <LinearLayout
        android:id="@+id/fag2_ll_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle"
        android:background="@color/ag_contrastIndigo">
        <Button
            android:id="@+id/fag2_ll_bt_skip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/ag_skip"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/fag2_ll_bt_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/ag_next"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textAllCaps="false" />
    </LinearLayout>
</RelativeLayout>